<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/top_banner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00589d"
        android:gravity="center_horizontal"
        android:text="Irreducible Representations Calculator"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="The reducible representation:" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:background="#BBBBBB">

        <TableRow>

            <TextView />

            <TextView
                android:id="@+id/textView6"
                android:background="@drawable/table_outline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="E" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:background="@drawable/table_outline"
                android:padding="2dp"
                android:text="3rd cell" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:text="4th cell" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="reduces to:" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:text="RESULT" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/button23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="55dp"
            android:text="reduce another *element from user_input.xml* representation"
            android:textColorHighlight="#00FFFFFF" />

        <Button
            android:id="@+id/button24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/button23"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:text="reduce a representation for a different point group" />
    </RelativeLayout>


</LinearLayout>